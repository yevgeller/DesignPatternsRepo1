@{
}

@*
    big hint button is active after a losse
    clean up logging
    abstract state
    remove timers
    best time
    reformat code for a better reading
    timed game
    fix negative time display for timed mode
    altering any fields changes radio button to Custom
*@
<link rel="stylesheet" href="~/css/minesGame.css" />
<div class="is-flex">
    <div class="m-6 is-flex-direction-column" style="min-width:450px;">
        <div id="tbl"></div>
        <div class="mt-6 container is-flex is-flex-direction-row is-align-items-flex-start gap20px">
            <button id="smallHintButton" class="button" onclick="giveHint(false)"><i class="fa-regular fa-hourglass mr-3"></i>Small Hint (+10 seconds penalty)</button>
            <button id="largeHintButton" class="button" onclick="giveHint(true)"><i class="fa-solid fa-triangle-exclamation mr-3"></i>Big Hint (+30 seconds penalty)</button>
        </div>
        <div class="mt-6">Game parameters:</div>
        @* <div class="container is-flex is-flex-direction-row is-align-items-flex-start gap20px">
        <div class="field">
        <p class="control has-icons-left has-icons-right">
        <input class="input ma-w-120" type="number" id="minesAmountInput" placeholder="Mines">
        <span class="icon is-small is-left">
        <i class="fa-solid fa-asterisk"></i>
        </span>
        </p>
        </div>
        <div class="field">
        <p class="control has-icons-left has-icons-right">
        <input class="input ma-w-120" type="number" id="playingFieldWidthInput" placeholder="Width" min="5" max="20">
        <span class="icon is-small is-left">
        <i class="fa-solid fa-arrows-left-right"></i>
        </span>
        </p>
        </div>
        <div class="field">
        <p class="control has-icons-left has-icons-right">
        <input class="input ma-w-120" type="number" id="playingFieldHeightInput" placeholder="Height" min="5" max="20">
        <span class="icon is-small is-left">
        <i class="fa-solid fa-arrows-up-down"></i>
        </span>
        </p>
        </div>
        <button class="button" onclick="resetGame()"><i class="fa-solid fa-play mr-3"></i>Play</button>
        </div>*@

        <div class="mt-5 container is-flex is-flex-direction-column is-align-items-flex-start gap20px">
            @* <button id="setSmallEasy" class="button" onclick="smallestAndEasiest()"><i class="fa-solid fa-x"></i><i class="fa-solid fa-s mr-3"></i>Smallest and easiest</button>
            <button id="resetGameParams" class="button" onclick="resetGameParametersAndStartNewGame()"><i class="fa-solid fa-m mr-3"></i>Default game settings</button>
            <button id="setLargeHard" class="button" onclick="largestAndHardest()"><i class="fa-solid fa-x"></i><i class="fa-solid fa-l mr-3"></i>Largest and hardest</button>
            <button id="timedModeSwitch" class="button" onclick="timedModeChange();"><i class="fa-solid fa-stopwatch mr-3"></i>Timed Mode</button>
            *@
            <div class="box">
                <div style="min-height:50px;">
                    <label class="radio">
                        <input type="radio" id="chbS" name="parameters" onchange="setGameParameters([5,5,5]);">
                        <i class="fa-solid fa-s mr-3"></i>5Wx5Hx5M
                    </label>
                </div>
                <div style="min-height:50px;">
                    <label class="radio">
                        <input type="radio" id="chbM" name="parameters" checked onchange="setGameParameters([10,10,20]);">
                        <i class="fa-solid fa-m mr-3"></i>10Wx10Hx20M
                    </label>
                </div>
                <div style="min-height:50px;">
                    <label class="radio">
                        <input type="radio" id="chbXL" name="parameters" onchange="setGameParameters([20,20,100]);">
                        <i class="fa-solid fa-l mr-3"></i>20Wx20Hx100M
                    </label>
                </div>
                <div style="min-height:50px;">
                    <div class="container is-flex is-flex-direction-row is-align-items-center gap20px">
                        <label class="radio">
                            <input type="radio" id="chbCustom" name="foobar">
                            Custom
                        </label>

                        <div class="field">
                            <p class="control has-icons-left has-icons-right">
                                <input class="input ma-w-120" type="number" id="playingFieldWidthInput" placeholder="Width" min="5" max="20">
                                <span class="icon is-small is-left">
                                    <i class="fa-solid fa-arrows-left-right"></i>
                                </span>
                            </p>
                        </div>
                        <div class="field">
                            <p class="control has-icons-left has-icons-right">
                                <input class="input ma-w-120" type="number" id="playingFieldHeightInput" placeholder="Height" min="5" max="20">
                                <span class="icon is-small is-left">
                                    <i class="fa-solid fa-arrows-up-down"></i>
                                </span>
                            </p>
                        </div>
                        <div class="field">
                            <p class="control has-icons-left has-icons-right">
                                <input class="input ma-w-120" type="number" id="minesAmountInput" placeholder="Mines">
                                <span class="icon is-small is-left">
                                    <i class="fa-solid fa-asterisk"></i>
                                </span>
                            </p>
                        </div>
                        <div class="field"></div>
                    </div>
                </div>
                <div class="mt-3 mr-3" style="min-height:50px;">
                    <label class="checkbox">
                        <input type="checkbox" id="chbTimedMode">
                        <i class="fa-solid fa-stopwatch mr-3 ml-3 is-size-3"></i>Timed Mode
                    </label>
                </div>
                <div style="min-height:50px;">
                    <button class="button" onclick="resetGame()"><i class="fa-solid fa-play mr-3"></i>Play</button>
                </div>
            </div>
        </div>
        <div class="mt-6 container flex-direction-vertical mi-wi-300 is-hidden" id="scoreboardDiv">
            <div>
                <h2><i class="fa-solid fa-flag-checkered mr-3"></i>Scoreboard:</h2>
                <ol id="results" class="ml-3 mt-2"></ol>
            </div>
        </div>
    </div>
    <div class="m-6 container flex-direction-vertical mi-wi-300">
        <div class="mb-2">
            <h2><i class="fa-solid fa-chess-bishop mr-3"></i>Current game:</h2>
        </div>

        <div id="timerArea"><i class="fa-regular fa-clock mr-2"></i><span id="timerHeaderString"></span>: <div id="timerValue" style="min-height:60px;"></div></div>

        @*<label class="checkbox">
        <input id="timedModeSwitch" type="checkbox" onclick="timedModeChange();"/>Timed mode</label>*@
        <div><i class="fa-solid fa-asterisk mr-2 mt-3"></i> Mines left: <span id="minesLeft"></span></div>
    </div>
</div>

<script src="~/js/minesGame.js" type="text/javascript" language="javascript" />
